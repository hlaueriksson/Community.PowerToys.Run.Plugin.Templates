{
    "$schema": "http://json.schemastore.org/template",
    "author": "Henrik Lau Eriksson",
    "classifications": [
        "Plugin",
        "PowerToys"
    ],
    "identity": "Community.PowerToys.Run.Plugin.Templates",
    "name": "PowerToys Run Plugin",
    "shortName": "ptrun",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "Plugin1",
    "preferNameDirectory": true,
    "guids": [
        "00000000000000000000000000000000"
    ],
    "symbols": {
        "PluginAuthor": {
            "type": "parameter",
            "displayName": "Plugin _author",
            "description": "The author of the plugin.",
            "replaces": "hlaueriksson"
        },
        "TestProject": {
            "type": "parameter",
            "datatype": "bool",
            "displayName": "Create a _test project",
            "description": "Configures whether to create a project for unit tests.",
            "defaultValue": "true"
        },
        "Images": {
            "type": "derived",
            "datatype": "text",
            "valueSource": "name",
            "valueTransform": "ImagesTransform",
            "fileRename": "plugin1"
        }
    },
    "forms": {
        "ImagesTransform": {
            "identifier": "lowerCase"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!TestProject)",
                    "exclude": [
                        "Community.PowerToys.Run.Plugin.Plugin1.UnitTests/**/*"
                    ]
                }
            ]
        }
    ]
}